<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	tools:context=".LimaFragment">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/mImageMartabak"
		android:orientation="vertical"
		android:padding="8dp">

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:onClick="onClickPesan"
			app:cardCornerRadius="4dp"
			tools:ignore="OnClick">

			<LinearLayout
				android:id="@+id/login"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:scaleType="centerCrop"
					android:src="@drawable/kerjasama" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginLeft="8dp"
					android:text="Login"
					android:textColor="#757575"
					android:textSize="20dp" />

			</LinearLayout>
		</android.support.v7.widget.CardView>

		<android.support.v7.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:onClick="onClickTOpMenu"
			app:cardCornerRadius="4dp"
			tools:ignore="OnClick">

			<LinearLayout
				android:id="@+id/register"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="16dp">

				<ImageView
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:scaleType="centerCrop"
					android:src="@drawable/keranjang" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginLeft="8dp"
					android:text="Daftar"
					android:textColor="#757575"
					android:textSize="20dp" />

			</LinearLayout>
		</android.support.v7.widget.CardView>

		<Space
			android:layout_width="20dp"
			android:layout_height="30dp"
			/>

		<ScrollView
			android:id="@+id/scroll"
			android:layout_width="match_parent"
			android:layout_height="0sp"
			android:layout_weight="5">

			<TextView
				android:id="@+id/textView1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/peternakan"
				android:textAppearance="?android:attr/textAppearanceMedium" />
		</ScrollView>
	</LinearLayout>

</FrameLayout>
